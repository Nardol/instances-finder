{
  "name": "instances-finder",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "type": "module",
  "description": "Prototype accessible to find Mastodon instances (instances.social)",
  "scripts": {
    "prebuild": "node scripts/gen-i18n-keys.mjs",
    "dev": "vite",
    "build": "tsc --noEmit --incremental --tsBuildInfoFile ./dist/.tsbuildinfo && vite build",
    "preview": "vite preview",
    "lint": "eslint --cache --cache-location .cache/eslint --ext .ts,.tsx src",
    "lint:fix": "eslint --cache --cache-location .cache/eslint --ext .ts,.tsx src --fix",
    "fmt:js": "prettier --cache --write .",
    "fmt:rust": "cargo fmt --manifest-path src-tauri/Cargo.toml",
    "fmt": "npm run fmt:js && npm run fmt:rust",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build",
    "tauri:build:appimage": "TAURI_BUNDLE_TARGETS=appimage tauri build",
    "tauri:build:deb": "TAURI_BUNDLE_TARGETS=deb tauri build",
    "tauri:build:linux": "TAURI_BUNDLE_TARGETS=appimage,deb tauri build",
    "cross:prep:win": "rustup target add x86_64-pc-windows-gnu",
    "cross:build:win:exe": "bash scripts/cross-win-build.sh app",
    "cross:build:win:nsis": "bash scripts/cross-win-build.sh nsis",
    "cross:build:win:zip": "bash scripts/win-portable-zip.sh",
    "release:tag": "bash scripts/release-tag.sh",
    "release:gh": "bash scripts/gh-create-release.sh",
    "tauri:build:win:exe": "TAURI_BUNDLE_TARGETS=app tauri build --target x86_64-pc-windows-gnu",
    "tauri:build:win:nsis": "TAURI_BUNDLE_TARGETS=nsis tauri build --target x86_64-pc-windows-gnu",
    "test": "vitest run",
    "gen:i18n:keys": "node scripts/gen-i18n-keys.mjs"
  },
  "dependencies": {
    "@tauri-apps/api": "^2.8.0",
    "@tauri-apps/plugin-clipboard-manager": "^2.0.0",
    "@tauri-apps/plugin-shell": "^2.0.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@tauri-apps/cli": "2.8.4",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.1",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "@vitejs/plugin-react": "^5.0.4",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsx-a11y": "^6.9.0",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^6.1.1",
    "prettier": "^3.3.3",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.0",
    "vite": "^7.1.9",
    "vitest": "^3.2.4"
  }
}
