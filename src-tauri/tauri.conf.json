{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "productName": "Instances Finder",
  "version": "0.1.0",
  "identifier": "org.instances.finder",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "app": {
    "security": {
      "csp": "default-src 'self'; base-uri 'self'; form-action 'self'; object-src 'none'; frame-ancestors 'self'; img-src 'self' data:; font-src 'self' data:; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-eval' 'nonce-{cspNonce}'; connect-src 'self' http://localhost:5173 ws://localhost:5173;"
    },
    "windows": [
      {
        "label": "main",
        "title": "Instances Finder",
        "width": 960,
        "height": 720,
        "resizable": true,
        "fullscreen": false,
        "decorations": false
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": ["appimage", "deb", "app", "nsis"],
    "icon": ["icons/icon.png", "icons/icon.ico"],
    "publisher": "Patrick Zajda <patrick@zajda.fr>",
    "shortDescription": "Trouver une instance Mastodon accessible.",
    "longDescription": "Outil de bureau pour comparer et choisir des instances Mastodon via l'API instances.social, avec un accent sur l'accessibilité (lecteurs d'écran, navigation clavier).",
    "category": "Utility",
    "linux": {
      "deb": {
        "depends": [
          "libwebkit2gtk-4.1-0",
          "libgtk-3-0",
          "libayatana-appindicator3-1",
          "librsvg2-2",
          "libssl3"
        ]
      }
    },
    "windows": {
      "webviewInstallMode": { "type": "downloadBootstrapper" }
    }
  }
}
